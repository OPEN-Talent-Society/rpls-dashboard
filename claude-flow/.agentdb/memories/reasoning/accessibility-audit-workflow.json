{
  "id": "accessibility-audit-workflow",
  "type": "reasoning-pattern",
  "domain": "accessibility",
  "title": "WCAG Accessibility Audit Workflow",
  "created_at": "2025-12-01T23:10:00.000Z",
  "workflow": [
    "1. Categorize by WCAG Level (A, AA, AAA)",
    "2. Prioritize Level A first (critical/blocking)",
    "3. Then Level AA (standard compliance target)",
    "4. Group fixes by component/file",
    "5. Apply semantic HTML before ARIA",
    "6. Test with screen reader simulation",
    "7. Verify keyboard navigation",
    "8. Check color contrast ratios",
    "9. Validate touch target sizes (44x44px min)",
    "10. Commit with detailed a11y changelog"
  ],
  "agent_config": {
    "agent_type": "accessibility-auditor",
    "capabilities": [
      "wcag-analysis",
      "aria-validation",
      "keyboard-testing",
      "screen-reader-compatibility"
    ],
    "patterns": [
      "semantic-html-first",
      "progressive-enhancement",
      "graceful-degradation"
    ],
    "tools": [
      "axe-core",
      "lighthouse-a11y",
      "wave",
      "nvda",
      "voiceover"
    ]
  },
