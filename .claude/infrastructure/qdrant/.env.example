# Qdrant Security Configuration
# Copy this to .env and fill in the values
# NEVER commit .env to git!

# Qdrant API Keys (generate with: openssl rand -base64 48 | tr -d '/+=' | cut -c1-64)
QDRANT_API_KEY=your-admin-api-key-here-64-characters-long-alphanumeric
QDRANT_READ_ONLY_API_KEY=your-readonly-api-key-here-64-characters-long-alphanumeric

# Qdrant URLs
QDRANT_URL=https://qdrant.harbor.fyi
QDRANT_TAILSCALE_URL=http://100.x.x.x:6333

# Cloudflare Access (Optional - for additional authentication layer)
CF_ACCESS_CLIENT_ID=your-cloudflare-service-token-client-id
CF_ACCESS_CLIENT_SECRET=your-cloudflare-service-token-client-secret

# Qdrant Configuration
QDRANT_LOG_LEVEL=info
QDRANT_STORAGE_PATH=/qdrant/storage
QDRANT_SNAPSHOTS_PATH=/qdrant/snapshots

# Backup Configuration
QDRANT_BACKUP_ENABLED=true
QDRANT_BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
QDRANT_BACKUP_RETENTION_DAYS=30
